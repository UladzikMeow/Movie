@model Diplom.ViewModel.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}

<div class="main-container">
    <div class="login">
        <form method="post" asp-controller="Account" asp-action="ChangePassword">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="Email" />
            <label asp-for="OldPassword">Старый пароль</label>
            <input type="text" asp-for="OldPassword" />
            <label asp-for="NewPassword">Новый пароль</label>
            <input type="text" asp-for="NewPassword" />

            <button type="submit">Сохранить</button>
        </form>
    </div>
</div>