@model IEnumerable<Diplom.Models.Movie>

@{
    ViewData["Title"] = "Панель администрации";
}

<div class="admin_panel_div">
    <a asp-action="CreateMovie" class="a_button">Добавить фильм</a>
    <a asp-action="CreateActor" class="a_button">Добавить актера</a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Название
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <form asp-action="Delete" method="post" asp-controller="AdministrationPanel">
                    <input type="hidden" name="Id" value="@item.Id" />
                    <button type="submit">Удалить</button>
                </form>
            </td>
        </tr>
    }
        </tbody>
    </table>
</div>
<div>

</div>
